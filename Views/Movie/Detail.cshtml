@{
}
@model MovieModel

<div class="container">


    <div class="row">


        <div class="col-8">
        <img src="@Model.PosterUrl" class="img-thumbnail"/>
        </div>
        <div class="col-4">
            <table>
               
                    <td>Title: @Model.Title</td>
                </tr>
                <tr>
                    <td>Duration: @Model.Duration</td>
                </tr>
                <tr>
                    <td>Release Date: @Model.ReleaseDate</td>
                </tr>
                <tr>
                    <td>Description: @Model.Description</td>
                </tr>
            </table>
        </div>
    </div>
</div>

